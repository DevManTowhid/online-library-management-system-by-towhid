# backend/.env

# Port the Express API server will run on
PORT=4000

# Path to your Firebase Admin SDK Service Account JSON file. 
# You download this from your Firebase project settings -> Service Accounts tab.
FIREBASE_SERVICE_ACCOUNT_PATH=./config/olms-firebase-admin-key.json 

# URL of your Next.js frontend, required for CORS configuration
FRONTEND_URL=http://localhost:3000